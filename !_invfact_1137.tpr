insert #Result_Invoices  
       (
       Number           
      ,[Date]           
      ,FakturaID        
      ,ParDocsNum       
      ,Seller           
      ,SelAddress       
      ,SelAddressID       
      ,SelINN
      ,SellKPP           
      ,Buyer            
      ,BuyAddress       
      ,BuyAddressID       
      ,BuyINN
      ,BuyKPP           
      ,Gruzootpravitel  
